<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:orientation="vertical"
android:layout_marginTop="20dp"
android:layout_marginStart="15dp"
android:layout_marginEnd="15dp"
app:cardMaxElevation="15dp">

<RelativeLayout
    android:id="@+id/relativeLayoutInventory"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre set"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/set_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/set_name"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/set_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_image"
        android:textAlignment="center"
        android:textSize="16dp"
        android:text="PRECIO"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/set_pieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_image"
        android:layout_toEndOf="@+id/set_prize"
        android:textAlignment="center"
        android:layout_marginStart="260dp"
        android:textSize="16dp"
        android:text="Pieces"
        android:textColor="@color/black"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>